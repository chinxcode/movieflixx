        <main id="cast-details">
            <div class="cast-info">
                <div class="profile-image">
                    <img id="profile-image" src="" alt="Actor Profile" />
                </div>
                <div class="info">
                    <h1 id="cast-name"></h1>
                    <p id="biography"></p>
                    <div class="personal-info">
                        <h3>Personal Info</h3>
                        <p><strong>Known For:</strong> <span id="known-for"></span></p>
                        <p><strong>Known Credits:</strong> <span id="known-credits"></span></p>
                        <p><strong>Gender:</strong> <span id="gender"></span></p>
                        <p><strong>Birthday:</strong> <span id="birthday"></span></p>
                        <p><strong>Place of Birth:</strong> <span id="place-of-birth"></span></p>
                    </div>
                    <div class="social-links" id="social-links"></div>
                </div>
            </div>
            <div class="filmography">
                <h2>Known For</h2>
                <div id="known-for-list" class="movie-grid"></div>
                <h2>Acting</h2>
                <div id="acting-credits" class="credits-list"></div>
                <button id="expand-credits" class="expand-button">Show More</button>
            </div>
            <div class="photos">
                <h2>Photos</h2>
                <div id="photo-grid" class="photo-grid"></div>
            </div>
        </main>

